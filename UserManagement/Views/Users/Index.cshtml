@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Users";
}
<h1 class="display-4">Users</h1>
<a asp-action="Save" class="btn btn-primary" >New User</a>
<div class="table-responsive">
    <table class="table table-striped mt-3">
        <thead class="bg-primary text-light">
            <tr>
                <th>Full Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" , ", user.Roles.ToArray())</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
                        <a class="btn btn-secondary" asp-controller="Users" asp-action="Save" asp-route-userId="@user.Id">Edit <i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-userId="@user.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>